<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_edit_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑图片" />

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_edit_image"
            android:layout_centerInParent="true"
            android:text="拍摄照片" />

        <Button
            android:id="@+id/btn_compose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_take_photo"
            android:layout_centerInParent="true"
            android:text="合成图片" />

        <Button
            android:id="@+id/btn_edit_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_compose_image"
            android:layout_centerInParent="true"
            android:text="编辑视频" />

        <Button
            android:id="@+id/btn_mix_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_edit_video"
            android:layout_centerInParent="true"
            android:text="混合编辑" />
    </LinearLayout>
</RelativeLayout>